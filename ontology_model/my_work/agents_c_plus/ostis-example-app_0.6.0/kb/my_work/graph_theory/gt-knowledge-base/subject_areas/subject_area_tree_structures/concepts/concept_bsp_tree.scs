concept_bsp_tree <- rrel_key_sc_element: 
		... 
		(*
		<- definition;;
		=> nrel_main_idtf: [Определение: BSP-дерево] (* <- lang_ru;; *);;
		=> nrel_main_idtf: [Definition: BSP-tree] (* <- lang_en;; *);;
		<= nrel_sc_text_translation: ...
			(*
			-> rrel_example: 
				[BSP-дерево — дерево, отвечающее заданному двоичному разбиению пространства (методу рекурсивного разбиения евклидова пространства в выпуклые множества и гиперплоскости).](*<- lang_ru;;*);;
			-> rrel_example: 
